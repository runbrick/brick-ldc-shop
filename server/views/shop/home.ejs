<%- include('../partials/header', { title, user }) %>
<div class="mb-10">
  
  <!-- 公告模块 -->
  <% if (typeof activeAnnouncements !== 'undefined' && activeAnnouncements.length > 0) { %>
  <div class="mb-8 bg-blue-50 border border-blue-100 rounded p-3 flex items-center gap-3 overflow-hidden">
    <div class="flex-shrink-0 text-blue-500">
      <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" class="w-5 h-5"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z"/></svg>
    </div>
    <div class="flex-1 overflow-hidden relative h-6">
      <div class="marquee-content whitespace-nowrap absolute top-0 left-0 flex items-center gap-8 text-sm text-blue-800">
        <% activeAnnouncements.forEach(function(notice) { %>
          <span class="inline-flex items-center gap-2">
            <% if (notice.title) { %><span class="font-bold">[<%= notice.title %>]</span><% } %>
            <span class="prose prose-sm prose-blue inline-block max-w-none"><%- notice.content %></span>
          </span>
        <% }); %>
        <!-- Duplicate content for smooth loop -->
        <% activeAnnouncements.forEach(function(notice) { %>
          <span class="inline-flex items-center gap-2" aria-hidden="true">
            <% if (notice.title) { %><span class="font-bold">[<%= notice.title %>]</span><% } %>
            <span class="prose prose-sm prose-blue inline-block max-w-none"><%- notice.content %></span>
          </span>
        <% }); %>
      </div>
    </div>
  </div>
  <style>
    @keyframes marquee {
      0% { transform: translateX(0); }
      100% { transform: translateX(-50%); }
    }
    .marquee-content {
      animation: marquee 30s linear infinite;
    }
    .marquee-content:hover {
      animation-play-state: paused;
    }
  </style>
  <% } %>

  <div class="grid grid-cols-1 lg:grid-cols-[2fr,1fr] gap-6 mb-8">
    <div class="platform-card relative overflow-hidden min-h-[180px] flex items-center">
      <div class="absolute inset-0">
        <div class="absolute inset-0 bg-gradient-to-r from-slate-900/80 via-slate-900/40 to-transparent"></div>
        <div class="absolute inset-0" style="<% if (typeof siteBackground !== 'undefined' && siteBackground) { var bg = String(siteBackground).replace(/'/g, '\\\'').replace(/</g, ''); %>background-image: url('<%= bg %>'); background-size: cover; background-position: center;<% } else { %>background-image: linear-gradient(120deg, #1f2937, #475569, #0ea5e9);<% } %>"></div>
      </div>
      <div class="relative z-10 px-8 py-10 text-white">
        <div class="text-sm font-medium text-white/80 mb-2">欢迎来到 <%= siteName %></div>
        <div class="text-2xl font-bold mb-2">精选卡密专区</div>
        <div class="text-sm text-white/80"><%= homeSubtitle %></div>
      </div>
    </div>
    <div class="platform-card p-6 flex flex-col justify-center">
      <div class="text-sm text-platform-soft mb-2">欢迎访问</div>
      <div class="text-lg font-bold text-platform-primary mb-3"><%= siteName %> 个人小店</div>
      <div class="text-sm text-platform-muted mb-5">打开秘境之门，让梦想在星光中绽放。</div>
      <div class="grid grid-cols-3 gap-3 text-center text-xs text-platform-soft">
        <div class="flex flex-col items-center gap-2">
          <div class="w-9 h-9 rounded bg-rose-50 text-rose-500 flex items-center justify-center">
            <svg viewBox="0 0 24 24" class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M3 7h13a4 4 0 0 1 4 4v6a2 2 0 0 1-2 2H3z"></path>
              <path d="M3 7l4-4h10a2 2 0 0 1 2 2v2"></path>
            </svg>
          </div>
          自动发货
        </div>
        <div class="flex flex-col items-center gap-2">
          <div class="w-9 h-9 rounded bg-sky-50 text-sky-500 flex items-center justify-center">
            <svg viewBox="0 0 24 24" class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M12 3l7 4v5c0 5-3.5 8-7 9-3.5-1-7-4-7-9V7z"></path>
            </svg>
          </div>
          保障安全
        </div>
        <div class="flex flex-col items-center gap-2">
          <div class="w-9 h-9 rounded bg-emerald-50 text-emerald-500 flex items-center justify-center">
            <svg viewBox="0 0 24 24" class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M4 6h16"></path>
              <path d="M4 12h10"></path>
              <path d="M4 18h13"></path>
            </svg>
          </div>
          实时查询
        </div>
      </div>
    </div>
  </div>

  <h1 class="text-2xl font-bold text-platform-primary mb-2 title-deco">商品列表</h1>
  <p class="text-platform-muted mb-6"><%= homeSubtitle %></p>
  <div class="flex flex-wrap items-center gap-2">
    <span class="text-platform-muted text-sm">分类：</span>
    <a href="/shop<%= typeof currentSort !== 'undefined' && currentSort ? '?sort=' + encodeURIComponent(currentSort) : '' %>" class="px-4 py-2 rounded text-sm font-medium transition-colors duration-200 cursor-pointer <%= !currentCategoryId ? 'bg-primary text-white' : 'platform-card text-platform-primary hover:opacity-90' %>">全部</a>
    <% (categoryTree || []).forEach(function(p) { %>
    <a href="/shop?category=<%= p.id %><%= typeof currentSort !== 'undefined' && currentSort ? '&sort=' + encodeURIComponent(currentSort) : '' %>" class="px-4 py-2 rounded text-sm font-medium transition-colors duration-200 cursor-pointer <%= currentCategoryId === p.id ? 'bg-primary text-white' : 'platform-card text-platform-primary hover:opacity-90' %>"><%= p.name %></a>
    <% (p.children || []).forEach(function(c) { %>
    <a href="/shop?category=<%= c.id %><%= typeof currentSort !== 'undefined' && currentSort ? '&sort=' + encodeURIComponent(currentSort) : '' %>" class="px-4 py-2 rounded text-sm font-medium transition-colors duration-200 cursor-pointer <%= currentCategoryId === c.id ? 'bg-primary text-white' : 'platform-card text-platform-primary hover:opacity-90' %>"><%= p.name %> → <%= c.name %></a>
    <% }); %>
    <% }); %>
    <span class="text-platform-soft text-sm ml-4">排序：</span>
    <select onchange="(function(){ var v=this.value; var p=[]; <% if (currentCategoryId) { %>p.push('category=<%= currentCategoryId %>');<% } %> if(v) p.push('sort='+encodeURIComponent(v)); location.href='/shop'+(p.length?'?'+p.join('&'):''); }).call(this)" class="platform-input py-2 pl-3 pr-8 text-sm text-platform-primary cursor-pointer min-w-[140px]">
      <option value="" <%= !currentSort ? 'selected' : '' %>>默认</option>
      <option value="price_asc" <%= currentSort === 'price_asc' ? 'selected' : '' %>>价格从低到高</option>
      <option value="price_desc" <%= currentSort === 'price_desc' ? 'selected' : '' %>>价格从高到低</option>
      <option value="sales_desc" <%= currentSort === 'sales_desc' ? 'selected' : '' %>>销量优先</option>
    </select>
  </div>
</div>
<% if (typeof query !== 'undefined' && query.oauth === 'not_configured') { %>
<div class="platform-card p-5 mb-8 border-amber-200 bg-amber-50/80 text-amber-900 text-sm">
  登录功能未配置：请在 .env 中设置 LINUX_DO_OAUTH_CLIENT_ID 与 LINUX_DO_OAUTH_CLIENT_SECRET，并在 Linux.do 创建 OAuth2 应用。
</div>
<% } %>
<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
  <% (products || []).forEach(function(p) { %>
  <a href="/shop/product/<%= p.slug || p.id %>" class="group relative block platform-card overflow-hidden card-hover p-0">
    <div class="h-0.5 w-full bg-indigo-500/80"></div>
    <% if (p.cover_image) { %>
      <img src="<%= p.cover_image %>" alt="<%= p.name %>" class="w-full h-40 object-cover" loading="lazy" />
    <% } %>
    <div class="p-5 flex flex-col gap-3">
      <div class="flex items-center justify-between gap-2 text-xs">
        <div class="flex items-center gap-2">
          <span class="inline-flex items-center rounded bg-indigo-500/10 text-indigo-600 px-2 py-0.5 font-medium text-xs">
            数字卡密
          </span>
          <% if (p.is_hot === 1) { %>
          <span class="inline-flex items-center rounded bg-rose-500/10 text-rose-600 px-2 py-0.5 font-medium text-xs">
            热门
          </span>
          <% } %>
        </div>
        <span class="text-platform-soft">
          库存 <%= p.stock === -1 ? '无限' : p.stock %>
        </span>
      </div>
      <div class="font-semibold text-platform-primary text-sm">
        <%= p.name %>
      </div>
      <div class="mt-auto flex items-center justify-between text-sm pt-1">
        <div class="flex items-baseline gap-1.5">
          <span class="text-primary font-semibold">
            <%= Number(p.price).toFixed(2) %> 积分
          </span>
          <% if (p.original_price && p.original_price > p.price) { %>
          <span class="text-platform-soft text-xs line-through">
            <%= Number(p.original_price).toFixed(2) %>
          </span>
          <% } %>
        </div>
        <span class="inline-flex items-center gap-1 text-xs text-indigo-500 group-hover:text-indigo-600 transition-colors">
          查看详情
          <svg class="w-3 h-3" viewBox="0 0 24 24" aria-hidden="true">
            <path d="M8.75 5.75L15 12l-6.25 6.25" fill="none" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round" />
          </svg>
        </span>
      </div>
    </div>
  </a>
  <% }); %>
</div>
<% if (!products || products.length === 0) { %>
<div class="text-center py-16 text-platform-soft">暂无商品，请到后台添加。</div>
<% } %>
<%- include('../partials/pagination', { basePath: '/shop', pagination: typeof pagination !== 'undefined' ? pagination : null, query: typeof query !== 'undefined' ? query : {} }) %>
<%- include('../partials/footer') %>
