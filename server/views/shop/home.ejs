<%- include('../partials/header', { title, user }) %>
<div class="mb-8">
  <h1 class="text-2xl font-bold text-slate-900 mb-1">商品列表</h1>
  <p class="text-slate-600">选择商品，使用 Linux.do 积分支付</p>
</div>
<% if (typeof query !== 'undefined' && query.oauth === 'not_configured') { %>
<div class="bg-amber-50 border border-amber-200 text-amber-800 rounded-lg p-4 mb-6">
  登录功能未配置：请在 .env 中设置 LINUX_DO_OAUTH_CLIENT_ID 与 LINUX_DO_OAUTH_CLIENT_SECRET，并在 Linux.do 创建 OAuth2 应用。
</div>
<% } %>
<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
  <% (products || []).forEach(function(p) { %>
  <a href="/shop/product/<%= p.id %>" class="block bg-white rounded-xl border border-slate-200 p-6 card-hover shadow-sm">
    <div class="font-semibold text-slate-900 text-lg mb-2"><%= p.name %></div>
    <p class="text-slate-600 text-sm mb-4 line-clamp-2"><%= (p.description || '').slice(0, 80) %></p>
    <div class="flex items-center justify-between">
      <span class="text-primary font-semibold">¥ <%= Number(p.price).toFixed(2) %></span>
      <span class="text-slate-400 text-sm">库存 <%= p.stock %></span>
    </div>
  </a>
  <% }); %>
</div>
<% if (!products || products.length === 0) { %>
<div class="text-center py-16 text-slate-500">暂无商品，请到后台添加。</div>
<% } %>
<%- include('../partials/footer') %>
