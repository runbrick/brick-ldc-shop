<%- include('../partials/header', { title, user }) %>
<div class="mb-10">
  <h1 class="text-2xl font-bold text-platform-primary mb-2 title-deco">商品列表</h1>
  <p class="text-platform-muted mb-6"><%= homeSubtitle %></p>
  <div class="flex flex-wrap items-center gap-2">
    <span class="text-platform-muted text-sm">分类：</span>
    <a href="/shop<%= typeof currentSort !== 'undefined' && currentSort ? '?sort=' + encodeURIComponent(currentSort) : '' %>" class="px-4 py-2 rounded-xl text-sm font-medium transition-colors duration-200 cursor-pointer <%= !currentCategoryId ? 'bg-primary text-white' : 'platform-card text-platform-primary hover:opacity-90' %>">全部</a>
    <% (categoryTree || []).forEach(function(p) { %>
    <a href="/shop?category=<%= p.id %><%= typeof currentSort !== 'undefined' && currentSort ? '&sort=' + encodeURIComponent(currentSort) : '' %>" class="px-4 py-2 rounded-xl text-sm font-medium transition-colors duration-200 cursor-pointer <%= currentCategoryId === p.id ? 'bg-primary text-white' : 'platform-card text-platform-primary hover:opacity-90' %>"><%= p.name %></a>
    <% (p.children || []).forEach(function(c) { %>
    <a href="/shop?category=<%= c.id %><%= typeof currentSort !== 'undefined' && currentSort ? '&sort=' + encodeURIComponent(currentSort) : '' %>" class="px-4 py-2 rounded-xl text-sm font-medium transition-colors duration-200 cursor-pointer <%= currentCategoryId === c.id ? 'bg-primary text-white' : 'platform-card text-platform-primary hover:opacity-90' %>"><%= p.name %> → <%= c.name %></a>
    <% }); %>
    <% }); %>
    <span class="text-platform-soft text-sm ml-4">排序：</span>
    <select onchange="(function(){ var v=this.value; var p=[]; <% if (currentCategoryId) { %>p.push('category=<%= currentCategoryId %>');<% } %> if(v) p.push('sort='+encodeURIComponent(v)); location.href='/shop'+(p.length?'?'+p.join('&'):''); }).call(this)" class="platform-input py-2 pl-3 pr-8 text-sm text-platform-primary cursor-pointer min-w-[140px]">
      <option value="" <%= !currentSort ? 'selected' : '' %>>默认</option>
      <option value="price_asc" <%= currentSort === 'price_asc' ? 'selected' : '' %>>价格从低到高</option>
      <option value="price_desc" <%= currentSort === 'price_desc' ? 'selected' : '' %>>价格从高到低</option>
      <option value="sales_desc" <%= currentSort === 'sales_desc' ? 'selected' : '' %>>销量优先</option>
    </select>
  </div>
</div>
<% if (typeof query !== 'undefined' && query.oauth === 'not_configured') { %>
<div class="platform-card p-5 mb-8 border-amber-200 bg-amber-50/80 text-amber-900 text-sm">
  登录功能未配置：请在 .env 中设置 LINUX_DO_OAUTH_CLIENT_ID 与 LINUX_DO_OAUTH_CLIENT_SECRET，并在 Linux.do 创建 OAuth2 应用。
</div>
<% } %>
<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
  <% (products || []).forEach(function(p) { %>
  <a href="/shop/product/<%= p.slug || p.id %>" class="group relative block platform-card overflow-hidden card-hover p-0">
    <div class="h-1 w-full bg-gradient-to-r from-indigo-500 via-sky-400 to-cyan-300"></div>
    <% if (p.cover_image) { %>
      <img src="<%= p.cover_image %>" alt="<%= p.name %>" class="w-full h-40 object-cover" loading="lazy" />
    <% } %>
    <div class="p-5 flex flex-col gap-3">
      <div class="flex items-center justify-between gap-2 text-xs">
        <span class="inline-flex items-center rounded-full bg-indigo-500/10 text-indigo-600 px-2 py-0.5 font-semibold">
          数字卡密
        </span>
        <span class="text-platform-soft">
          库存 <%= p.stock === -1 ? '无限' : p.stock %>
        </span>
      </div>
      <div class="font-semibold text-platform-primary text-sm">
        <%= p.name %>
      </div>
      <div class="mt-auto flex items-center justify-between text-sm pt-1">
        <span class="text-primary font-semibold">
          <%= Number(p.price).toFixed(2) %> 积分
        </span>
        <span class="inline-flex items-center gap-1 text-xs text-indigo-500 group-hover:text-indigo-600 transition-colors">
          查看详情
          <svg class="w-3 h-3" viewBox="0 0 24 24" aria-hidden="true">
            <path d="M8.75 5.75L15 12l-6.25 6.25" fill="none" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round" />
          </svg>
        </span>
      </div>
    </div>
  </a>
  <% }); %>
</div>
<% if (!products || products.length === 0) { %>
<div class="text-center py-16 text-platform-soft">暂无商品，请到后台添加。</div>
<% } %>
<%- include('../partials/pagination', { basePath: '/shop', pagination: typeof pagination !== 'undefined' ? pagination : null, query: typeof query !== 'undefined' ? query : {} }) %>
<%- include('../partials/footer') %>
