<%- include('../partials/header', { title, user }) %>
<div class="mb-12 lg:mb-16">
  <h1 class="text-2xl font-bold text-warm-900 mb-2">商品列表</h1>
  <p class="text-snug-500">选择商品，使用 Linux.do 积分支付</p>
</div>
<% if (typeof query !== 'undefined' && query.oauth === 'not_configured') { %>
<div class="snug-card p-5 mb-8 bg-amber-50/80 border-amber-200/60 text-amber-900">
  登录功能未配置：请在 .env 中设置 LINUX_DO_OAUTH_CLIENT_ID 与 LINUX_DO_OAUTH_CLIENT_SECRET，并在 Linux.do 创建 OAuth2 应用。
</div>
<% } %>
<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 lg:gap-10">
  <% (products || []).forEach(function(p) { %>
  <a href="/shop/product/<%= p.id %>" class="block snug-card overflow-hidden card-hover p-0">
    <% if (p.cover_image) { %><img src="<%= p.cover_image %>" alt="" class="w-full h-40 object-cover" /><% } %>
    <div class="p-6 lg:p-8">
    <div class="font-semibold text-warm-900 text-lg mb-2"><%= p.name %></div>
    <p class="text-snug-500 text-sm mb-4 line-clamp-2"><%= (p.description || '').replace(/[#*\[\]()]/g, '').slice(0, 80) %></p>
    <div class="flex items-center justify-between">
      <span class="text-primary font-semibold">¥ <%= Number(p.price).toFixed(2) %></span>
      <span class="text-snug-500 text-sm">库存 <%= p.stock === -1 ? '无限' : p.stock %></span>
    </div>
    </div>
  </a>
  <% }); %>
</div>
<% if (!products || products.length === 0) { %>
<div class="text-center py-20 text-snug-500">暂无商品，请到后台添加。</div>
<% } %>
<%- include('../partials/footer') %>
