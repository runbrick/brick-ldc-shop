<%- include('../partials/header', { title: '我的订单', user }) %>
<h1 class="text-2xl font-bold text-slate-900 mb-6">我的订单</h1>
<div class="bg-white rounded-xl border border-slate-200 overflow-hidden">
  <table class="w-full text-left">
    <thead class="bg-slate-50 border-b border-slate-200">
      <tr>
        <th class="px-4 py-3 text-slate-600 font-medium">订单号</th>
        <th class="px-4 py-3 text-slate-600 font-medium">商品</th>
        <th class="px-4 py-3 text-slate-600 font-medium">金额</th>
        <th class="px-4 py-3 text-slate-600 font-medium">状态</th>
        <th class="px-4 py-3 text-slate-600 font-medium">时间</th>
        <th class="px-4 py-3 text-slate-600 font-medium"></th>
      </tr>
    </thead>
    <tbody>
      <% (orders || []).forEach(function(o) { %>
      <tr class="border-b border-slate-100 hover:bg-slate-50 transition-colors duration-200">
        <td class="px-4 py-3 font-mono text-sm"><%= o.order_no %></td>
        <td class="px-4 py-3"><%= o.product_name %><% if (o.quantity > 1) { %> x<%= o.quantity %><% } %></td>
        <td class="px-4 py-3">¥ <%= Number(o.amount).toFixed(2) %></td>
        <td class="px-4 py-3">
          <% if (o.status === 'paid') { %><span class="text-green-600">已支付</span><% } %>
          <% if (o.status === 'pending') { %><span class="text-amber-600">待支付</span><% } %>
          <% if (o.status === 'refunded') { %><span class="text-slate-500">已退款</span><% } %>
        </td>
        <td class="px-4 py-3 text-slate-500 text-sm"><%= o.created_at %></td>
        <td class="px-4 py-3">
          <% if (o.status === 'paid') { %>
          <a href="/shop/order/result?order_no=<%= o.order_no %>" class="text-primary hover:underline cursor-pointer">查看卡密</a>
          <% } else if (o.status === 'pending') { %>
          <a href="/shop/order/result?order_no=<%= o.order_no %>" class="text-slate-500 hover:underline cursor-pointer">去支付</a>
          <% } %>
        </td>
      </tr>
      <% }); %>
    </tbody>
  </table>
  <% if (!orders || orders.length === 0) { %>
  <div class="p-12 text-center text-slate-500">暂无订单</div>
  <% } %>
</div>
<%- include('../partials/footer') %>
