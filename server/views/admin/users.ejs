<%- include('partials/header', { title: '用户管理', user }) %>
<h1 class="text-xl font-bold text-slate-900 mb-6">用户列表</h1>
<% if (typeof query !== 'undefined' && query.ok === '1') { %>
<div class="bg-green-50 border border-green-200 text-green-800 rounded-lg p-3 mb-4">已更新管理员权限</div>
<% } %>
<% if (typeof query !== 'undefined' && query.error === 'self') { %>
<div class="bg-amber-50 border border-amber-200 text-amber-800 rounded-lg p-3 mb-4">不能修改自己的管理员状态</div>
<% } %>
<% if (typeof query !== 'undefined' && query.error === 'notfound') { %>
<div class="bg-amber-50 border border-amber-200 text-amber-800 rounded-lg p-3 mb-4">用户不存在</div>
<% } %>
<div class="bg-white rounded-lg border border-slate-200 overflow-hidden">
  <table class="w-full text-left">
    <thead class="bg-slate-50 border-b border-slate-200">
      <tr>
        <th class="px-4 py-3 text-slate-600 font-medium">用户</th>
        <th class="px-4 py-3 text-slate-600 font-medium">Linux.do ID</th>
        <th class="px-4 py-3 text-slate-600 font-medium">邮箱</th>
        <th class="px-4 py-3 text-slate-600 font-medium">订单数</th>
        <th class="px-4 py-3 text-slate-600 font-medium">注册时间</th>
        <th class="px-4 py-3 text-slate-600 font-medium">角色</th>
        <th class="px-4 py-3 text-slate-600 font-medium">操作</th>
      </tr>
    </thead>
    <tbody>
      <% (users || []).forEach(function(u) { %>
      <tr class="border-b border-slate-100">
        <td class="px-4 py-3">
          <div class="flex items-center gap-2">
            <% if (u.avatar_url) { %>
            <img src="<%= u.avatar_url %>" alt="" class="w-8 h-8 rounded-full object-cover" onerror="this.style.display='none'">
            <% } %>
            <span class="font-medium"><%= u.username %></span>
          </div>
        </td>
        <td class="px-4 py-3 font-mono text-sm text-slate-500"><%= u.linux_do_id || '—' %></td>
        <td class="px-4 py-3 text-sm"><%= u.email || '—' %></td>
        <td class="px-4 py-3"><%= u.order_count != null ? u.order_count : 0 %></td>
        <td class="px-4 py-3 text-slate-500 text-sm"><%= u.created_at %></td>
        <td class="px-4 py-3">
          <% if (u.is_admin === 1) { %>
          <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-primary/20 text-primary">管理员</span>
          <% } else { %>
          <span class="text-slate-400">普通用户</span>
          <% } %>
        </td>
        <td class="px-4 py-3">
          <% if (u.id !== user.id) { %>
          <form action="/admin/users/<%= u.id %>/admin" method="post" class="inline">
            <button type="submit" class="text-primary hover:underline cursor-pointer text-sm">
              <%= u.is_admin === 1 ? '取消管理员' : '设为管理员' %>
            </button>
          </form>
          <% } else { %>
          <span class="text-slate-400 text-sm">当前登录</span>
          <% } %>
        </td>
      </tr>
      <% }); %>
    </tbody>
  </table>
  <% if (!users || users.length === 0) { %>
  <div class="p-12 text-center text-slate-500">暂无用户（用户将在首次 OAuth 登录时自动创建）</div>
  <% } %>
</div>
<%- include('partials/footer') %>
