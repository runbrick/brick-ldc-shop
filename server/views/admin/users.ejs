<%- include('partials/header', { title: '用户管理', user }) %>
<h1 class="text-xl font-bold text-platform-primary mb-8">用户列表</h1>
<% if (typeof query !== 'undefined' && query.ok === '1') { %>
<div class="platform-card p-4 mb-6 border border-emerald-200 bg-emerald-50/80 text-green-800 text-sm">已更新管理员权限</div>
<% } %>
<% if (typeof query !== 'undefined' && query.error === 'self') { %>
<div class="platform-card p-4 mb-6 border border-amber-200 bg-amber-50/80 text-amber-900 text-sm">不能修改自己的管理员状态</div>
<% } %>
<% if (typeof query !== 'undefined' && query.error === 'notfound') { %>
<div class="platform-card p-4 mb-6 border border-amber-200 bg-amber-50/80 text-amber-900 text-sm">用户不存在</div>
<% } %>
<div class="platform-card overflow-hidden border border-slate-200">
  <table class="w-full text-left">
    <thead class="border-b border-slate-200 bg-slate-50">
      <tr>
        <th class="px-4 py-3 text-platform-muted font-medium text-sm">用户</th>
        <th class="px-4 py-3 text-platform-muted font-medium text-sm">Linux.do ID</th>
        <th class="px-4 py-3 text-platform-muted font-medium text-sm">邮箱</th>
        <th class="px-4 py-3 text-platform-muted font-medium text-sm">订单数</th>
        <th class="px-4 py-3 text-platform-muted font-medium text-sm">注册时间</th>
        <th class="px-4 py-3 text-platform-muted font-medium text-sm">角色</th>
        <th class="px-4 py-3 text-platform-muted font-medium text-sm">操作</th>
      </tr>
    </thead>
    <tbody>
      <% (users || []).forEach(function(u) { %>
      <tr class="border-b border-slate-200 hover:bg-slate-50 transition-colors duration-200">
        <td class="px-4 py-3">
          <div class="flex items-center gap-2">
            <% if (u.avatar_url) { %>
            <img src="<%= u.avatar_url %>" alt="" class="w-8 h-8 rounded-full object-cover" onerror="this.style.display='none'">
            <% } %>
            <span class="font-medium text-platform-primary"><%= u.username %></span>
          </div>
        </td>
        <td class="px-4 py-3 font-mono text-sm text-platform-soft"><%= u.linux_do_id || '—' %></td>
        <td class="px-4 py-3 text-sm text-platform-primary"><%= u.email || '—' %></td>
        <td class="px-4 py-3 text-platform-primary"><%= u.order_count != null ? u.order_count : 0 %></td>
        <td class="px-4 py-3 text-platform-soft text-sm"><%= u.created_at %></td>
        <td class="px-4 py-3">
          <% if (u.is_admin === 1) { %>
          <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-primary/15 text-primary">管理员</span>
          <% } else { %>
          <span class="text-platform-soft text-sm">普通用户</span>
          <% } %>
        </td>
        <td class="px-4 py-3">
          <% if (u.id !== user.id) { %>
          <form action="/admin/users/<%= u.id %>/admin" method="post" class="inline">
            <button type="submit" class="text-primary hover:underline cursor-pointer text-sm">
              <%= u.is_admin === 1 ? '取消管理员' : '设为管理员' %>
            </button>
          </form>
          <% } else { %>
          <span class="text-platform-soft text-sm">当前登录</span>
          <% } %>
        </td>
      </tr>
      <% }); %>
    </tbody>
  </table>
  <% if (!users || users.length === 0) { %>
  <div class="p-16 text-center text-platform-soft">暂无用户（用户将在首次 OAuth 登录时自动创建）</div>
  <% } %>
</div>
<%- include('partials/footer') %>
