<%- include('partials/header', { title, user }) %>
<h1 class="text-xl font-bold text-warm-900 mb-8">概览</h1>
<div class="grid grid-cols-2 md:grid-cols-4 gap-6 mb-10">
  <div class="snug-card p-6">
    <div class="text-snug-500 text-sm mb-1">商品数</div>
    <div class="text-2xl font-bold text-warm-900"><%= stats.products %></div>
  </div>
  <div class="snug-card p-6">
    <div class="text-snug-500 text-sm mb-1">订单数</div>
    <div class="text-2xl font-bold text-warm-900"><%= stats.orders %></div>
  </div>
  <div class="snug-card p-6">
    <div class="text-snug-500 text-sm mb-1">已支付</div>
    <div class="text-2xl font-bold text-green-700"><%= stats.paidOrders %></div>
  </div>
  <div class="snug-card p-6">
    <div class="text-snug-500 text-sm mb-1">总金额</div>
    <div class="text-2xl font-bold text-warm-900">¥ <%= Number(stats.totalAmount).toFixed(2) %></div>
  </div>
</div>
<a href="/admin/products" class="btn-primary">商品管理</a>
<a href="/admin/orders" class="btn-primary ml-3">订单管理</a>
<%- include('partials/footer') %>
