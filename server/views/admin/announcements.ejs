<%- include('partials/header', { title: '公告管理', user }) %>

<div class="flex justify-between items-center mb-6">
  <h1 class="text-xl font-bold text-platform-primary">公告管理</h1>
  <button onclick="document.getElementById('modal-new').classList.remove('hidden')" class="btn-primary cursor-pointer">
    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" class="w-4 h-4 mr-2"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/></svg>
    新增公告
  </button>
</div>

<div class="platform-card overflow-hidden">
  <div class="overflow-x-auto">
    <table class="w-full text-left border-collapse">
      <thead>
        <tr>
          <th class="px-4 py-3 table-th w-16">排序</th>
          <th class="px-4 py-3 table-th w-48">标题 (可选)</th>
          <th class="px-4 py-3 table-th">内容</th>
          <th class="px-4 py-3 table-th w-24">状态</th>
          <th class="px-4 py-3 table-th w-32">操作</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-100">
        <% if (announcements.length === 0) { %>
        <tr><td colspan="5" class="px-4 py-8 text-center text-platform-soft text-sm">暂无公告</td></tr>
        <% } %>
        <% announcements.forEach(function(item) { %>
        <tr class="table-tr-hover transition-colors">
          <td class="px-4 py-3 text-platform-primary"><%= item.sort %></td>
          <td class="px-4 py-3 font-medium text-platform-primary"><%= item.title || '-' %></td>
          <td class="px-4 py-3 text-sm text-platform-muted max-w-md truncate" title="<%= item.content %>"><%= item.content %></td>
          <td class="px-4 py-3">
            <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium <%= item.is_active ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
              <%= item.is_active ? '启用' : '禁用' %>
            </span>
          </td>
          <td class="px-4 py-3 flex gap-2">
            <button onclick="editAnnouncement(<%= JSON.stringify(item) %>)" class="text-platform-muted hover:text-primary text-sm font-medium transition-colors">编辑</button>
            <form action="/admin/announcements/<%= item.id %>/delete" method="POST" onsubmit="return confirm('确定删除该公告吗？');" class="inline">
              <button type="submit" class="text-platform-soft hover:text-red-500 text-sm transition-colors">删除</button>
            </form>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</div>

<!-- New/Edit Modal -->
<div id="modal-new" class="fixed inset-0 bg-black/50 z-50 hidden flex items-center justify-center backdrop-blur-sm">
  <div class="bg-white rounded-xl shadow-2xl w-full max-w-lg mx-4 transform transition-all">
    <div class="px-6 py-4 border-b border-gray-100 flex justify-between items-center">
      <h3 class="font-bold text-lg text-gray-800" id="modal-title">新增公告</h3>
      <button onclick="closeModal()" class="text-gray-400 hover:text-gray-600">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/></svg>
      </button>
    </div>
    <form action="/admin/announcements" method="POST" class="p-6 space-y-4" id="announcement-form">
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">标题 (可选)</label>
        <input type="text" name="title" class="platform-input w-full px-3 py-2" placeholder="如：系统维护通知" />
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">内容 (支持 HTML)</label>
        <textarea name="content" required rows="4" class="platform-input w-full px-3 py-2" placeholder="支持 <a href='...'>链接</a>"></textarea>
      </div>
      <div class="flex gap-4">
        <div class="flex-1">
          <label class="block text-sm font-medium text-gray-700 mb-1">排序 (大在前)</label>
          <input type="number" name="sort" value="0" class="platform-input w-full px-3 py-2" />
        </div>
        <div class="flex-1">
          <label class="block text-sm font-medium text-gray-700 mb-1">状态</label>
          <select name="is_active" class="platform-input w-full px-3 py-2">
            <option value="1">启用</option>
            <option value="0">禁用</option>
          </select>
        </div>
      </div>
      <div class="pt-4 flex justify-end gap-3">
        <button type="button" onclick="closeModal()" class="px-4 py-2 text-gray-600 hover:bg-gray-100 rounded-lg transition-colors">取消</button>
        <button type="submit" class="btn-primary">保存</button>
      </div>
    </form>
  </div>
</div>

<script>
function closeModal() {
  document.getElementById('modal-new').classList.add('hidden');
  document.getElementById('announcement-form').reset();
  document.getElementById('announcement-form').action = '/admin/announcements';
  document.getElementById('modal-title').innerText = '新增公告';
}

function editAnnouncement(item) {
  const modal = document.getElementById('modal-new');
  const form = document.getElementById('announcement-form');
  
  document.getElementById('modal-title').innerText = '编辑公告';
  form.action = '/admin/announcements/' + item.id;
  
  form.querySelector('input[name="title"]').value = item.title || '';
  form.querySelector('textarea[name="content"]').value = item.content;
  form.querySelector('input[name="sort"]').value = item.sort;
  form.querySelector('select[name="is_active"]').value = item.is_active;
  
  modal.classList.remove('hidden');
}
</script>
<%- include('partials/footer') %>