<%- include('partials/header', { title: '友情链接管理', user }) %>

<div class="flex justify-between items-center mb-6">
  <h1 class="text-xl font-bold text-platform-primary">友情链接管理</h1>
  <button onclick="document.getElementById('modal-new').classList.remove('hidden')" class="btn-primary cursor-pointer">
    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" class="w-4 h-4 mr-2"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/></svg>
    新增链接
  </button>
</div>

<div class="platform-card overflow-hidden">
  <div class="overflow-x-auto">
    <table class="w-full text-left border-collapse">
      <thead>
        <tr>
          <th class="px-4 py-3 table-th w-16">排序</th>
          <th class="px-4 py-3 table-th">名称</th>
          <th class="px-4 py-3 table-th">链接地址</th>
          <th class="px-4 py-3 table-th">Logo</th>
          <th class="px-4 py-3 table-th w-24">状态</th>
          <th class="px-4 py-3 table-th w-32">操作</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-100">
        <% if (links.length === 0) { %>
        <tr><td colspan="6" class="px-4 py-8 text-center text-platform-soft text-sm">暂无友情链接</td></tr>
        <% } %>
        <% links.forEach(function(link) { %>
        <tr class="table-tr-hover transition-colors">
          <td class="px-4 py-3 text-platform-primary"><%= link.sort %></td>
          <td class="px-4 py-3 font-medium text-platform-primary"><%= link.name %></td>
          <td class="px-4 py-3 text-sm text-platform-muted"><a href="<%= link.url %>" target="_blank" class="hover:text-primary underline decoration-dotted"><%= link.url %></a></td>
          <td class="px-4 py-3">
            <% if (link.logo_url) { %>
            <img src="<%= link.logo_url %>" class="w-6 h-6 rounded-full object-cover border border-gray-200" />
            <% } else { %>
            <span class="text-xs text-platform-soft">-</span>
            <% } %>
          </td>
          <td class="px-4 py-3">
            <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium <%= link.is_active ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
              <%= link.is_active ? '启用' : '禁用' %>
            </span>
          </td>
          <td class="px-4 py-3 flex gap-2">
            <button onclick="editLink(<%= JSON.stringify(link) %>)" class="text-platform-muted hover:text-primary text-sm font-medium transition-colors">编辑</button>
            <form action="/admin/links/<%= link.id %>/delete" method="POST" onsubmit="return confirm('确定删除该链接吗？');" class="inline">
              <button type="submit" class="text-platform-soft hover:text-red-500 text-sm transition-colors">删除</button>
            </form>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</div>

<!-- New/Edit Modal -->
<div id="modal-new" class="fixed inset-0 bg-black/50 z-50 hidden flex items-center justify-center backdrop-blur-sm">
  <div class="bg-white rounded-xl shadow-2xl w-full max-w-md mx-4 transform transition-all">
    <div class="px-6 py-4 border-b border-gray-100 flex justify-between items-center">
      <h3 class="font-bold text-lg text-gray-800" id="modal-title">新增友情链接</h3>
      <button onclick="closeModal()" class="text-gray-400 hover:text-gray-600">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/></svg>
      </button>
    </div>
    <form action="/admin/links" method="POST" class="p-6 space-y-4" id="link-form">
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">名称</label>
        <input type="text" name="name" required class="platform-input w-full px-3 py-2" placeholder="如：Google" />
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">链接地址</label>
        <input type="url" name="url" required class="platform-input w-full px-3 py-2" placeholder="https://..." />
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Logo URL (可选)</label>
        <input type="url" name="logo_url" class="platform-input w-full px-3 py-2" placeholder="https://..." />
      </div>
      <div class="flex gap-4">
        <div class="flex-1">
          <label class="block text-sm font-medium text-gray-700 mb-1">排序 (大在前)</label>
          <input type="number" name="sort" value="0" class="platform-input w-full px-3 py-2" />
        </div>
        <div class="flex-1">
          <label class="block text-sm font-medium text-gray-700 mb-1">状态</label>
          <select name="is_active" class="platform-input w-full px-3 py-2">
            <option value="1">启用</option>
            <option value="0">禁用</option>
          </select>
        </div>
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">描述 (可选)</label>
        <input type="text" name="description" class="platform-input w-full px-3 py-2" placeholder="鼠标悬停时显示的提示文本" />
      </div>
      <div class="pt-4 flex justify-end gap-3">
        <button type="button" onclick="closeModal()" class="px-4 py-2 text-gray-600 hover:bg-gray-100 rounded-lg transition-colors">取消</button>
        <button type="submit" class="btn-primary">保存</button>
      </div>
    </form>
  </div>
</div>

<script>
function closeModal() {
  document.getElementById('modal-new').classList.add('hidden');
  document.getElementById('link-form').reset();
  document.getElementById('link-form').action = '/admin/links';
  document.getElementById('modal-title').innerText = '新增友情链接';
  // Remove hidden id input if exists
  const idInput = document.querySelector('input[name="id"]');
  if (idInput) idInput.remove();
}

function editLink(link) {
  const modal = document.getElementById('modal-new');
  const form = document.getElementById('link-form');
  
  document.getElementById('modal-title').innerText = '编辑友情链接';
  form.action = '/admin/links/' + link.id;
  
  form.querySelector('input[name="name"]').value = link.name;
  form.querySelector('input[name="url"]').value = link.url;
  form.querySelector('input[name="logo_url"]').value = link.logo_url || '';
  form.querySelector('input[name="sort"]').value = link.sort;
  form.querySelector('select[name="is_active"]').value = link.is_active;
  form.querySelector('input[name="description"]').value = link.description || '';
  
  modal.classList.remove('hidden');
}
</script>
<%- include('partials/footer') %>