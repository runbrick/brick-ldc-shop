# 服务
PORT=3000
SESSION_SECRET=your-session-secret-change-in-production
BASE_URL=http://localhost:3000

# 管理员：将允许登录后台的用户 ID 用逗号分隔（用户 ID 在首次 OAuth 登录后可在数据库 users 表查看）
ADMIN_USER_IDS=1

# Linux.do OAuth（在 https://linux.do 创建 OAuth2 应用后填写）
LINUX_DO_OAUTH_CLIENT_ID=
LINUX_DO_OAUTH_CLIENT_SECRET=
LINUX_DO_OAUTH_AUTHORIZE_URL=https://linux.do/oauth2/authorize
LINUX_DO_OAUTH_TOKEN_URL=https://connect.linux.do/oauth2/token
LINUX_DO_OAUTH_USERINFO_URL=https://linux.do/user-api/me
LINUX_DO_OAUTH_CALLBACK_PATH=/auth/linux-do/callback
# 连接 connect.linux.do 超时（ETIMEDOUT）时，可设置代理，例如: http://127.0.0.1:7890
# OAUTH_HTTP_PROXY=
# OAUTH_REQUEST_TIMEOUT=20000

# credit.linux.do 易支付（在控制台创建应用后填写）
EPAY_PID=
EPAY_KEY=
EPAY_BASE_URL=https://credit.linux.do/epay
EPAY_NOTIFY_URL=https://your-domain.com/api/pay/notify
EPAY_RETURN_URL=https://your-domain.com/shop/order/result
# 连接 credit.linux.do 超时时可设置代理（不设则自动使用 OAUTH_HTTP_PROXY）
# EPAY_HTTP_PROXY=http://127.0.0.1:7890
